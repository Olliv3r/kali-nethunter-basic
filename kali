#!/data/data/com.termux/files/usr/bin/bash -e
clear
menu()
{
clear
echo -ne "\n\e[5;93m@NoobFoda2\n"
echo -e  "\e[5;91m  1-Instalar kali-NetHunter-Basic"
echo -e  "\e[5;96m  2-Instalar OpenSsh"
echo -e  "\e[5;92m  3- Sair"
echo -ne "\e[5;92m \n >>>  "
read res
case $res in
"1")
echo -e " \e[5;92m";clear;echo;pkg install axel proot tar;clear
echo -e "\n\e[5;93Baixando Kali-Basic..."
echo -e "\n\e[5;94m Tamanho : 618 MB / Extracao : 1;90 GB \n"
axel -a https://download1073.mediafire.com/t9gytd8oshyg/ls0r2n6p7jz2ab0/kali-basic.tar.bz2 >> /dev/null
echo -e "\n\e[5;92m  Download Concluindo..";sleep 2;clear
echo -ne "\n\e[5;93Extraindo !! Tempo do Processo de 5 a 10 minutos..\n"
tar -vxjpf  kali-basic.tar.bz2 >> /dev/null
echo -e "\n\e[5;92 Criando a sessao de login do kali..";sleep 2;clear
echo "
#!/data/data/com.termux/files/usr/bin/bash -e
unset LD_PRELOAD
exec proot --link2symlink -0 -r /data/data/com.termux/files/home/kali-armhf -b /dev/ -b /sys/ -b /proc/ -b /storage/ -b /data/data/com.termux/files/home -w /data/data/com.termux/files/home /usr/bin/env -i HOME=/root TERM="xterm-256color" LANG=en_US.UTF-8 PATH=/bin:/usr/bin:/sbin:/usr/sbin /bin/bash --login" >> $PREFIX/bin/startkali
chmod 777 $PREFIX/bin/startkali
echo -e "\n\e[5;92m Concluindo com sucesso"
echo -e "\e[5;96mVolta para menu-inicial s/n?"
read s
if [ "$s" = "s" ]; then 
menu
else
echo "saindo.."
exit 
fi
;;
"2")
clear
echo
pkg update && pkg upgrade -y && pkg install openssh -y;clear
echo -e "\n\e[5;91m Aceite a permissao de acesso ao armazenamento\n"
termux-setup-storage && sleep 3
echo -e "\n\e[5;94m O serviÃ§o agora esta sendo iniciado na porta 8022 voce pode digitar :\e[5;92m logcat -s 'syslog:*' \e[5;34m para visualizar a saida de log.\e[5;93m\n"
sshd
touch ~/.ssh/authorized_keys && chmod 600 ~/.ssh/authorized_keys && chmod 700 ~/.ssh
ssh-keygen
cat ~/.ssh/id_rsa.pub >> ~/.ssh/authorized_keys && chmod 600 ~/.ssh/authorized_keys
cp ~/.ssh/id_rsa /sdcard
echo -e "\n\e[5;96m Instalacao feita com sucesso! 
 Ex: ssh 127.0.0.1 -p 8022 ou ssh user@127.0.0.1 -p 8022"
echo -e "\e[5;92mVolta para menu-inicial s/n?"
read s
if [ "$s" = "s" ]; then 
menu
else
echo "saindo.."
exit 
fi
;;
"3")
if [ "$res" = "5" ]; then
exit
fi
;;
esac
}
menu